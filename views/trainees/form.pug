extends ../base.pug

block content
  h3 #{action} trainee
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input.form-control(type="text", name="name", id="name", value=trainee.name)
    .form-group
      label(for="surname") Surname
      input.form-control(type="text", name="surname", id="surname", value=trainee.surname)
    .form-group
      label(for="email") E-mail
      input.form-control(type="text", name="email", id="email", value=trainee.email)
    .form-group
      label(for="phone") Phone
      input.form-control(type="text", name="phone", id="phone", value=trainee.phone)
    button.btn.btn-success(type="submit") Save
